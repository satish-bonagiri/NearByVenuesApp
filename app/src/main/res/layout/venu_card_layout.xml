<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/venue_card_margin"
        card_view:cardElevation="@dimen/elevation"
        card_view:cardCornerRadius="@dimen/venue_card_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/venue_thumbnail_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/venue_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/padding_5"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/venue_name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/venue_thumbnail_view"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:textColor="@color/venue_name_color"
                android:textSize="@dimen/text_size_15"
                android:text="gaaaa"/>

            <TextView
                android:id="@+id/distance_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/venue_name_textView"
                android:paddingBottom="@dimen/padding_5"
                android:paddingLeft="@dimen/padding_10"
                android:paddingRight="@dimen/padding_10"
                android:textSize="@dimen/text_size_12"
                android:text="adasdsa"/>


        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
